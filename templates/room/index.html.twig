{% extends 'base.html.twig' %}

{% block title %}Room index{% endblock %}

{% block body %}
    <h1 class="titlecreate">Room index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NameRoom</th>
                <th>TypeRoom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td>{{ room.nameRoom }}</td>
                <td>{{ room.typeRoom }}</td>
                <td>
                    <a href="{{ path('room_show', {'id': room.id}) }}">show</a>
                    <a href="{{ path('room_edit', {'id': room.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <div class="navigation">
            {{ knp_pagination_render(rooms) }}
        </div>

    <a href="{{ path('room_new') }}">Create new</a>
{% endblock %}
