{% extends 'base.html.twig'%}

{% block title %}Rechercher un article{% endblock %}

{% block body %}
   
<h1>Votre recherche</h1>

    <div class="form-group">
    {% form_theme searchForm 'bootstrap_4_layout.html.twig' %}
    {{ form_start(searchForm) }}
    {{ form_row(searchForm.title, {'label': " ", 'attr': {'placeholder': 'mot clé...'}}) }}
    <button class="btn btn-primary">rechercher</button>
    {{ form_end(searchForm) }}
    

    <section id="content">

            {% for student in students %}
            <article>
            <div class="card border-light mb-3" id="articlesRecents" style="max-width: 25rem;margin:1.5em;">
                <div class="card-header">

                   <h3>{{ student.firstName }}</h3>

                </div>
                <div class="card-body">
                  <h4 class="card-title">Ecrit le {{ student.createdAt | date('d/m/Y') }} à {{ student.createdAt | date('H:i') }} dans la catégorie {{ article.category.title }}</h4>
                  <p class="card-text">

                      {{ students.lastName}} ...
                    
                    </p>
                </div>
              </div>
            </article>
        {% endfor %}

        </section>

        
            <div class="pagination">
              {{ knp_pagination_render(articles) }}
           </div>

{% endblock %}